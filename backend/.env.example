# Variables d'environnement pour KitchenCraft Backend
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# Configuration base de donn√©es
DB_URL=jdbc:postgresql://localhost:5432/kitchencraft
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here

# Configuration JPA/Hibernate
JPA_DDL_AUTO=update
SHOW_SQL=false
FORMAT_SQL=false
USE_SQL_COMMENTS=false

# Configuration logging
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_APP=INFO
LOG_LEVEL_SQL=WARN
LOG_LEVEL_SQL_PARAMS=WARN
LOG_FILE=logs/kitchencraft.log

# Configuration serveur
SERVER_PORT=8080
CONTEXT_PATH=
COMPRESSION_ENABLED=true

# Configuration CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Configuration management endpoints
MANAGEMENT_ENDPOINTS=health,info,metrics
HEALTH_SHOW_DETAILS=when-authorized

# Configuration application
CACHE_ENABLED=true
CACHE_TTL_MINUTES=30
CACHE_MAX_ENTRIES=1000

SECURITY_CORS_ENABLED=true
RATE_LIMIT_ENABLED=false
RATE_LIMIT_RPM=100

API_VERSION=v1
API_DOC_ENABLED=true
API_DOC_TITLE=KitchenCraft API
API_DOC_DESC=API pour la gestion des recettes et plannings culinaires