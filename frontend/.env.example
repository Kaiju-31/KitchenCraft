# Variables d'environnement pour KitchenCraft Frontend
# Copiez ce fichier vers .env.local et modifiez les valeurs selon votre environnement

# Configuration API
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=10000

# Configuration cache
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL_MINUTES=5
VITE_CACHE_LOCAL_STORAGE=true
VITE_CACHE_MAX_SIZE_MB=50

# Configuration logging
VITE_LOG_LEVEL=info
VITE_LOG_CONSOLE_ENABLED=true
VITE_LOG_REMOTE_ENABLED=false
VITE_LOG_REMOTE_URL=

# Configuration monitoring
VITE_MONITORING_ENABLED=false
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING_ENABLED=false
VITE_ERROR_REPORTING_DSN=

# Configuration sécurité
VITE_CACHE_ENCRYPTION_ENABLED=false
VITE_CACHE_HMAC_KEY=your_hmac_secret_key_here_32_chars_min

# Configuration développement
VITE_DEBUG_CACHE_MONITOR=true
VITE_DEBUG_NETWORK_LOGS=false

# Configuration application
VITE_APP_NAME=KitchenCraft
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Gestionnaire de recettes culinaires
VITE_APP_CONTACT_EMAIL=contact@kitchencraft.com

# Configuration features
VITE_FEATURE_OFFLINE_MODE=false
VITE_FEATURE_PREDICTIVE_CACHE=true
VITE_FEATURE_ADVANCED_SEARCH=true