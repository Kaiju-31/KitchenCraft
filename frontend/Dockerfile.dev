# üç≥ KitchenCraft Frontend Development Dockerfile
# Hot reload enabled for development

FROM node:20-alpine

WORKDIR /app

# Install dependencies for hot reload
RUN apk --no-cache add curl

# Verify Node.js version compatibility
RUN node --version && npm --version

# Copy package files first for better layer caching
COPY package*.json ./

# Clean npm cache and install ALL dependencies (including devDependencies)
RUN npm cache clean --force && npm ci --silent

# Copy source code (will be overridden by volumes in dev)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:5173/ || exit 1

# Start Vite dev server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]